<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="vocaltweet.lapasa.net.vocaltweet.fragments.TweetDetailsFragment">


    <com.twitter.sdk.android.tweetui.TweetView
        android:id="@+id/tweetDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/playbackControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweetDetailView"
        android:layout_alignParentBottom="true"
        class="vocaltweet.lapasa.net.vocaltweet.fragments.PlaybackControlsFragment"/>

</RelativeLayout>