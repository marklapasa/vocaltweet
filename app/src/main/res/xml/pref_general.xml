<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general"/>

    <!-- User can define how many tweets they want to have read aloud -->
    <ListPreference
        android:key="@string/pref_define_max_tweet"
        android:title="@string/pref_define_max_tweet"
        android:defaultValue="25"
        android:entries="@array/pref_max_tweet_labels"
        android:entryValues="@array/pref_max_tweet_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <ListPreference
        android:key="@string/pref_tweet_cache_age"
        android:title="@string/pref_tweet_cache_age"
        android:entries="@array/pref_tweet_cache_labels"
        android:entryValues="@array/pref_tweet_cache_values"
        android:negativeButtonText="@null"
        android:defaultValue="-1"
        android:positiveButtonText="@null"/>

    <ListPreference
        android:key="@string/pref_audio_gap"
        android:title="@string/pref_audio_gap"
        android:entries="@array/pref_audio_gap_labels"
        android:entryValues="@array/pref_audio_gap_values"
        android:defaultValue="5000"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

</PreferenceScreen>
